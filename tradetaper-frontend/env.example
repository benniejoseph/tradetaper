# TradeTaper Frontend Environment Configuration
# Copy this file to .env.local and update the values as needed

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API URL
# For local development
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1
# For production (update with your deployed backend URL)
# NEXT_PUBLIC_API_URL=https://tradetaper-backend-production.up.railway.app/api/v1

# Backend WebSocket URL (for real-time features)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000
# For production (update with your deployed backend URL)
# NEXT_PUBLIC_BACKEND_URL=https://tradetaper-backend-production.up.railway.app

# ===========================================
# STRIPE CONFIGURATION
# ===========================================
# Stripe Publishable Key (safe to expose to client)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application Environment
NEXT_PUBLIC_APP_ENV=development

# Application Name and Version (optional)
NEXT_PUBLIC_APP_NAME=TradeTaper
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# ANALYTICS & MONITORING (OPTIONAL)
# ===========================================
# Google Analytics ID (if using)
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID

# Sentry DSN for error tracking (if using)
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn

# ===========================================
# FEATURE FLAGS (OPTIONAL)
# ===========================================
# Enable/disable specific features
NEXT_PUBLIC_ENABLE_WEBSOCKETS=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable debug mode in development
NEXT_PUBLIC_DEBUG=false 